<Window x:Class="ZalinschiMaratona.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZalinschiMaratona"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <Button x:Name="BtnLeggi" Content="Leggi" Click="BtnLeggi_Click" ></Button>
        <DataGrid x:Name="DgElencoMaratona" Height="300"></DataGrid>
        <Label Content="Calcola tempo"></Label>
        <TextBox x:Name="TxtAtleta"></TextBox>
        <TextBox x:Name="TxtCita"></TextBox>
        <Button x:Name="BtnCercaCitta" Content="Cerca Tempo" Click="BtnCercaCitta_Click"  ></Button>
      <Label x:Name="LblCitta"></Label>
    </StackPanel>
</Window>
